<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextHeader" parent="Theme.Todo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/font_inter_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextValue" parent="TextHeader">
        <item name="android:fontFamily">@font/font_inter_medium</item>
    </style>

    <style name="ButtonPriority">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">33dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">41dp</item>

    <style name="ChipFont">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/font_inter_bold</item>
    </style>
    <style name="Chips">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAppearance">@style/ChipFont</item>
        <item name="chipMinHeight">26dp</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textStartPadding">17dp</item>
        <item name="textEndPadding">17dp</item>
        <item name="chipBackgroundColor">@color/enable_background</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/checked_text_color</item>
    </style>
    <style name="Okbtn">
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="fontFamily">@font/font_inter_medium</item>
        <item name="android:textSize">@dimen/b1_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/black</item>
        <item name="rippleColor">@color/ripple_black</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:text">@string/ok</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <style name="CheckBox">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/font_inter_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="minWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:button">@null</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
</resources>