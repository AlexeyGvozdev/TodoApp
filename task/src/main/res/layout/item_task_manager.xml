<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="17dp"
    android:paddingTop="9dp"
    android:paddingRight="32dp"
    android:paddingBottom="7dp">

    <CheckBox
        android:id="@+id/checkBoxTaskPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingTop="13dp"
        android:textAppearance="@style/Headline3"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTaskPriority"
        app:layout_constraintTop_toTopOf="@+id/constraintTask"
        tools:text="Task Manager" />

    <TextView
        android:id="@+id/textViewTaskDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textAppearance="@style/Subtitle3"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTaskPriority"
        app:layout_constraintTop_toBottomOf="@+id/textViewTask"
        tools:text="07 Jan 23 / Project" />

    <ImageView
        android:id="@+id/imageViewChangePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/constraintTask"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_moving" />

</androidx.constraintlayout.widget.ConstraintLayout>