<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:theme="@style/Theme.Todo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="32dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_task_layout_title_start"
            android:text="@string/new_task"
            android:textSize="24sp"
            style="@style/TextHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_name_top"
            android:text="@string/name"
            style="@style/TextHeader"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_input_name_top"
            android:paddingVertical="@dimen/add_task_layout_input_name_vertical"
            android:paddingHorizontal="@dimen/add_task_layout_input_name_horizontal"
            android:background="@drawable/rounded_input_background"
            android:textCursorDrawable="@drawable/rounded_input_cursor"
            android:hint="@string/oops"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/font_inter_medium"
            android:includeFontPadding="false"
            android:imeOptions="actionDone"
            android:autofillHints=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_project_top"
            android:text="@string/project"
            android:includeFontPadding="false"
            style="@style/TextHeader"
            app:layout_constraintTop_toBottomOf="@id/input_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/selected_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_project_top"
            android:fontFamily="@font/font_inter_medium"
            style="@style/TextValue"
            app:layout_constraintTop_toBottomOf="@id/input_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="No project" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="project, selected_project" />

        <TextView
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_priority_top"
            android:text="@string/priority"
            android:includeFontPadding="false"
            style="@style/TextHeader"
            app:layout_constraintTop_toBottomOf="@id/project"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selected_priority"
            android:layout_width="@dimen/add_task_layout_selected_priority_size"
            android:layout_height="@dimen/add_task_layout_selected_priority_size"
            android:layout_marginTop="@dimen/add_task_layout_selected_priority_top"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/project"
            app:rippleColor="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            tools:backgroundTint="@color/light_grey"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="priority, selected_priority" />

        <TextView
            android:id="@+id/repeat"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_repeat_top"
            android:includeFontPadding="false"
            android:text="@string/repeat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priority" />

        <TextView
            android:id="@+id/selected_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_task_layout_repeat_top"
            style="@style/TextValue"
            app:layout_constraintTop_toBottomOf="@id/priority"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="No"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="repeat, selected_repeat" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_task"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/add_task_layout_add_task_top"
            android:layout_marginBottom="@dimen/add_task_layout_add_task_bottom"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/add_new_task"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:fontFamily="@font/font_inter_medium"
            android:includeFontPadding="false"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/black"
            app:rippleColor="@color/ripple_black"
            app:layout_constraintTop_toBottomOf="@id/repeat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>