<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <CheckBox
        android:id="@+id/checkBoxTaskPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:checked="true"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/Headline3"
        android:includeFontPadding="false"
        android:text="@string/task_manager_example"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTaskPriority"
        app:layout_constraintTop_toTopOf="@id/checkBoxTaskPriority" />

    <TextView
        android:id="@+id/textViewTaskDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Subtitle3"
        android:includeFontPadding="false"
        android:text="@string/_07_jan_23_project_example"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTaskPriority"
        app:layout_constraintTop_toBottomOf="@+id/textViewTask" />

    <ImageView
        android:id="@+id/imageViewChangePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_moving"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
